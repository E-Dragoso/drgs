{
  "version": "0.1.0",
  "configurations": [
    // ローカルにあるファイルをデバッグ
    {
      // デバッグ設定の名称
      "name": "Launch local file",
      // デバッグ種別を指定（chrome/node/monoなど）
      "type": "chrome",
      // lanunchまたはattachを指定
      "request": "launch",
      // 読み込むHTMLファイルを指定（プロジェクトからのパスを指定）
      "file": "${workspaceRoot}/index.html"
    },
    {
      "name": "Run android on emulator",
      "type": "cordova",
      "request": "launch",
      "platform": "android",
      "target": "emulator",
      "sourceMaps": true,
      "ionicLiveReload": true,
      "devServerTimeout": 50000,
      "cwd": "${workspaceRoot}"
    }
  ]
}